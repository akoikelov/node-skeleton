<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/base.css'/>
    <link rel='stylesheet' href='/mdb/css/bootstrap.min.css'/>
    <link rel='stylesheet' href='/mdb/css/mdb.min.css'/>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'/>
    <link rel='icon' href='/favicon.ico'/>
    {% block stylesheets %}{% endblock %}
  </head>
  <body>
    <!--Main Navigation-->
    <header>
      <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-blue-grey scrolling-navbar">
        <a class="navbar-brand" href="/"><strong>{{ navbar.title }}</strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            {% for link in navbar.links %}
              <li class="nav-item">
                <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
          <ul class="navbar-nav nav-flex-icons">
            {% if authenticated %}
              <li class="nav-item">
                <button class="btn btn-outline-success btn-sm my-0" onclick="location.href='/logout'">Logout</button>
              </li>
              <li class="nav-item">
                <i class="fa fa-user-circle-o fa-2x white-text" aria-hidden="true"></i>
              </li>
            {% endif %}
          </ul>
        </div>
      </nav>
    </header>
    <!--Main Navigation-->
    {% block body %}{% endblock %}
  </body>
  <script type="text/javascript" src="/mdb/js/jquery-3.2.1.min.js"></script>
  <script type="text/javascript" src="/mdb/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/mdb/js/mdb.min.js"></script>
  <script type="text/javascript" src="/mdb/js/popper.min.js"></script>
  {% block scripts %}{% endblock %}
</html>
