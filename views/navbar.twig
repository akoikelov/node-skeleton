{% set links = [
  {'url': '/', 'title': 'Home'},
  {'url': '/', 'title': 'About'},
  {'url': '/', 'title': 'Help'}
] %}

<nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-blue-grey scrolling-navbar" {% if authenticated %}style="padding-right: 70px!important"{% endif %}>
  <a class="navbar-brand" href="/"><strong>{{ title }}</strong></a>
  {% if authenticated %}
  <div id="user-icon" class="btn-group">
    <a class="" data-toggle="dropdown" id="user-dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-user-circle-o fa-2x white-text"></i>
    </a>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="user-dropdown">
      <a class="dropdown-item" href="/logout">Logout</a>
    </div>
  </div>
  {% endif %}
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      {% for link in links %}
        <li class="nav-item">
          <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}

      {% block navlinks %}{% endblock %}
    </ul>
  </div>
</nav>